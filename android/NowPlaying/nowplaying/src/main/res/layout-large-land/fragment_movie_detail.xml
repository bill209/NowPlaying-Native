<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kristyandkyle.nowplaying.MovieDetailActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5"
        android:background="@android:color/black">

        <ImageView
            android:id="@+id/movie_background"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="centerCrop"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:drawable/screen_background_dark_transparent"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical">

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="fill_parent"
                    android:layout_height="300dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="300dp"
                    android:background="#33000000"/>

                <Button
                    android:id="@+id/movie_play_btn"
                    android:layout_width="53dp"
                    android:layout_height="52dp"
                    android:background="@drawable/play_button"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_gravity="center_vertical"
                android:paddingRight="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    android:text="The Hunger Games: Catching Fire"/>

                <TextView
                    android:id="@+id/movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="60sp"
                    android:textColor="@android:color/white"
                    android:text="89%"/>

                <TextView
                    android:id="@+id/movie_mpaa_rating_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:text="PG-13, 2h 41m"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="0.5">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/movie_synopsis_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:text="Synopsis"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding"/>

            <TextView
                android:id="@+id/movie_synopsis"
                android:text="@string/hello_world"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movie_critics_consensus_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="Critics Consensus"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <TextView
                android:id="@+id/movie_critics_consensus"
                android:text="Critics Consensus Text"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/movie_cast_label"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:textSize="20sp"
                android:text="Cast"/>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#d3d3d3"
                android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                android:layout_marginBottom="@dimen/activity_vertical_margin"/>

            <LinearLayout
                android:id="@+id/movie_cast_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>