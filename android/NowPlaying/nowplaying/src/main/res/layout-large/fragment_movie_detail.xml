<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    tools:context="com.kristyandkyle.nowplaying.MovieDetailActivity$PlaceholderFragment">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/movie_background"
            android:layout_width="fill_parent"
            android:layout_height="450dp"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="450dp"
            android:background="@android:drawable/screen_background_dark_transparent"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/movie_title_container"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:paddingTop="?attr/actionBarSize"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/movie_poster_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="16dp">

                        <ImageView
                            android:id="@+id/movie_poster"
                            android:layout_width="fill_parent"
                            android:layout_height="300dp"/>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="300dp"
                            android:background="#33000000"/>

                        <Button
                            android:id="@+id/movie_play_btn"
                            android:layout_width="53dp"
                            android:layout_height="52dp"
                            android:background="@drawable/play_button"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.5"
                        android:layout_gravity="center_vertical">

                        <TextView
                            android:id="@+id/movie_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="35sp"
                            android:textColor="@android:color/white"
                            android:text="The Hunger Games: Catching Fire"/>

                        <TextView
                            android:id="@+id/movie_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="90sp"
                            android:textColor="@android:color/white"
                            android:text="89%"/>

                        <TextView
                            android:id="@+id/movie_mpaa_rating_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:text="PG-13, 2h 41m"/>

                    </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movie_synopsis_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Synopsis"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                    android:layout_marginBottom="@dimen/abc_action_bar_icon_vertical_padding"/>

                <TextView
                    android:id="@+id/movie_synopsis"
                    android:text="@string/hello_world"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/movie_critics_consensus_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textSize="20sp"
                    android:text="Critics Consensus"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <TextView
                    android:id="@+id/movie_critics_consensus"
                    android:text="Critics Consensus Text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/movie_cast_label"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:textSize="20sp"
                    android:text="Cast"/>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="#d3d3d3"
                    android:layout_marginTop="@dimen/abc_action_bar_icon_vertical_padding"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"/>

                <LinearLayout
                    android:id="@+id/movie_cast_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>